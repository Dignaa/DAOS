{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/src/jest.setup.ts"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
